<div class="page">
  <nav>
    <a href="/users/edit" title="Edit profile">Edit</a>
    <h3>My Résumé</h3>
  </nav>

  <%= partial :'partials/profile', :locals => { :user => default_user } %>

  <div class="row">
    <section class="jobs two_thirds">
      <h2>Jobs</h2>
      <ul class="no_bullets no_padding">
        <% @jobs.each do |job| %>
          <li>
            <%= partial :'partials/job', :locals => { :job => job } %>
            <%= partial :'partials/job_edit', :locals => { :job => job } %>
          <li>
        <% end %>

        <li>
          <%= partial :'partials/job_new' %>
        </li>
      </ul>
    </section>

    <section class="skills one_third">
      <h2>Skills</h2>
      <ul class="no_bullets no_padding">
        <% @skills.each do |skill| %>
          <li>
            <%= partial :'partials/skill', :locals => { :skill => skill } %>
          </li>
        <% end %>

        <li>
          <%= partial :'partials/skill_new' %>
        </li>
      </ul>
    </section>
  </div>

  <div class="row">
    <section class="schools two_thirds">
      <h2>Education</h2>
      <ul class="no_bullets no_padding">
        <% @schools.each do |school| %>
          <li>
            <%= partial :'partials/school', :locals => { :school => school } %>
          </li>
        <% end %>

        <li>
          <%= partial :'partials/school_new' %>
        </li>
      </ul>
    </section>
  </div>
</div>
